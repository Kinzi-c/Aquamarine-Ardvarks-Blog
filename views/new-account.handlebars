<div class="settingsContent"><br>
    <div class="accountTitle">Create Your Account</div>
    <br>

    <legend class="legend-titles">Account Details</legend>
    <form action="/createAccount" method="POST">
    <div class="detailsBox">
        <div class="fill">
            <label for="newUsername">Username:</label> <br>
            <input type="text" name="username" id="newUsername" placeholder="Please choose a username" required>
        </div><br>
        <p id="usernameTaken"></p>
        <div class="fill">
            <label for="passwordOne">Password:</label> <br>
            <input type="password" name="passwordOne" id="passwordOne" required><br>
        </div>
        <div class="fill">
            <label for="reEnterPass">Re-enter Password:</label> <br>
            <input type="password" name="reEnterPass" id="reEnterPass" required> <br>
            <p id="passwordMatch"></p>
        </div>


    </div><br>
    <div>
        <legend class="legend-titles">Personal Details</legend>
            <div class="detailsBox">
                <div class="fill">
                    <label for="fname">First Name:</label>
                    <input type="text" name="fname" required>
                </div><br>
                <div class="fill">
                    <label for="lname">Last Name:</label>
                    <input type="text" name="lname" required>
                </div><br>
                <div class="fill">
                    <label for="description">Brief Description:</label><br>
                    <textarea name="description" rows="5" style="width: 100%" required></textarea>
                </div><br>
                <div class="fill">
                    <label for="dob">Date of Birth:</label>
                    <input type="date" name="dob" required>
                </div><br>
                <div class="fill">
                    <label for="avatar">Avatar:</label> <br>
                    <input type="text" name="avatar" id="avatarInput" required> <br>
                    <img src="./images/avatars/avatar1.png" alt="avatar1.png" class="avatar">
                    <img src="./images/avatars/avatar2.png" alt="avatar2.png" class="avatar">
                    <img src="./images/avatars/avatar3.png" alt="avatar3.png" class="avatar">
                    <img src="./images/avatars/avatar4.png" alt="avatar4.png" class="avatar">
                    <img src="./images/avatars/avatar5.png" alt="avatar5.png" class="avatar">
                    <img src="./images/avatars/avatar6.png" alt="avatar6.png" class="avatar">
                    <img src="./images/avatars/avatar7.png" alt="avatar7.png" class="avatar">
                    <img src="./images/avatars/avatar8.png" alt="avatar8.png" class="avatar">
                    <img src="./images/avatars/avatar9.png" alt="avatar9.png" class="avatar">
                    <img src="./images/avatars/avatar10.png" alt="avatar10.png" class="avatar">

                </div>
            </div>
        <button type="submit" id="submitButton" disabled>Submit Form</button>
        </form>
    </div>
</div>