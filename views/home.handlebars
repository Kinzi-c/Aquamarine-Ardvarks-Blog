<a href="/article?id={{id}}" id="featured-article">
    <img id="featured-article-img" src="./images/{{featuredImage}}" alt="" style=" width: 100%;" height="600">
        <div id="featured-info">
            <h1>FEATURED ARTICLE</h1>
            <h2>{{featuredTitle}}</h2>
            <h3 name="featuredAuthor">Published by {{featuredAuthor}} - <span name="numDays">{{numDays}} days ago</span></h3>
            <p>{{featuredDescription}}</p>
        </div>
</a>

<div class="sort-panel">
<div class="dropdown">
    <button class="dropbtn">Categories 
      <i class="fa fa-caret-down" style="color:#333; padding: 0;"></i>
    </button>
    <div class="dropdown-content">
       <a href="/" value="Travel">All</a>
      <a href="/sortArticle?category=Travel" value="Travel">travel</a>
      <a href="/sortArticle?category=Food" value="Food">food</a>
      <a href="/sortArticle?category=Event" value="Event">event</a>
    </div>
  </div> 
 
  <div class="dropdown">
    <button class="dropbtn">Sort
      <i class="fa fa-caret-down" style="color:#333; padding: 0;"></i>
    </button>
    <div class="dropdown-content">
      <a href="/sortArticle?sort=latest">latest</a>
      <a href="/sortArticle?sort=oldest">oldest</a>
    </div>
  </div>
  </div>

  

<div id="article-container">
   
{{#each allArticleData}}
<a href="/article?id={{id}}" class="card">
   <!-- <a href="/articles/title/article-id.html">{{title}}</a> -->
    <div class="onDisplay">
        <div class="card-image">
            <img src="./images/{{imageName}}" width="100%" height="300">
        </div>
        <div class="card-body">
        <div class="hiddenDiv"><p>{{id}}</p></div>
        <h3 name="title"><strong>{{title}}</strong></h3>
        <h4 name="author"><em>{{authorName}}</em></h4>
        <h5 name="timeStamp"><em>{{publicationDate}}</em></h5>
        </div>    
    </div> 
    <div class="offDisplay">
        <div class="card-body">
        <div class="hiddenDiv"><p>{{id}}</p></div>
        <h3 name="title"><strong>{{title}}</strong></h3>
        <h4 name="author"><em>{{authorName}}</em></h4>
        <h5 name="timeStamp"><em>{{publicationDate}}</em></h5>
        <p name="description">{{description}}</p><br>
        <button class="button" id="readTimeButton" name="readingTime">{{readingTime}} min Read</button>
        </div>     
    </div>         
</a>
{{/each}}

</div>
